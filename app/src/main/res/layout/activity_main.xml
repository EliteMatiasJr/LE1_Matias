<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.elitesmatiasjr.gradecomputation.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/quiz1_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quiz 1"
            android:layout_marginTop="25dp"
            android:textSize="20sp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/quiz1_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="25dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:id="@+id/quiz2_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quiz 2"
            android:layout_marginTop="25dp"
            android:textSize="20sp" />

        <EditText
            android:layout_weight="1"
            android:id="@+id/quiz2_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="25dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:id="@+id/seatwork_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seatworks"
            android:layout_marginTop="25dp"
            android:textSize="20sp" />

        <EditText
            android:layout_weight="1"
            android:id="@+id/seatwork_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="25dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:id="@+id/lab_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lab Exercises"
            android:layout_marginTop="25dp"
            android:textSize="20sp" />

        <EditText
            android:layout_weight="1"
            android:id="@+id/lab_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="25dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:id="@+id/exam_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Major Exams"
            android:layout_marginTop="25dp"
            android:textSize="20sp" />

        <EditText
            android:layout_weight="1"
            android:id="@+id/exam_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="25dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnCompute"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Compute"
            android:onClick="callSecondActivity"/>

    </LinearLayout>



</LinearLayout>
